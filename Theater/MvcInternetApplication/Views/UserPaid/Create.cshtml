@model MvcInternetApplication.Models.Seat

@{
    ViewBag.Title = @App_LocalResources.GlobalRes.Забронировать;
}

    <h2>@App_LocalResources.GlobalRes.СтраницаПодтвержденияЗаказа</h2>
    <h2>@App_LocalResources.GlobalRes.ТыХорошоПодумал</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset>
            <legend>Seat</legend>

            @Html.HiddenFor(model => model.SeatId)

            <div class="editor-label">
                @Html.LabelFor(model => model.Name)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.Name, new { @readonly = "readonly" })
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.Price)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.Price, new { @readonly = "readonly" })
            </div>

            @Html.Hidden("PerfID", (int)ViewBag.perfId)
            <p>
                <input type="submit" value="@App_LocalResources.GlobalRes.ДаВыкупить" />
            </p>
        </fieldset>
    }

    <div>
        @Html.ActionLink(@App_LocalResources.GlobalRes.НеЛучшеПивкаПопью, "Index")
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
