@model MvcInternetApplication.Models.UserPaidShow

<h2>@App_LocalResources.GlobalRes.СписокПокупателей</h2>

<table>
    <tr>
        <th>
            @App_LocalResources.GlobalRes.Имя
        </th>
        <th>
            @App_LocalResources.GlobalRes.НазваниеПьесы
        </th>
        <th>
            @App_LocalResources.GlobalRes.Дата
        </th>
        <th>
            @App_LocalResources.GlobalRes.НомерМеста
        </th>
        <th>
            @App_LocalResources.GlobalRes.РезультатОплаты
        </th>
        <th></th>
    </tr>
    @foreach (var t in ViewBag.User)
    {
      <tr>
        <td>
            <h3>@t.Name</h3>
        </td>
        <td>
            <h3> @t.Performance</h3>
        </td>
        <td>
            <h3> @t.Date</h3>
        </td>
        <td>
            <h3> @t.SeatId</h3>
        </td>
          @if (t.Payment == false)
          {
            <td>
                <h3> @Html.CheckBox("Payment", false)</h3>
            </td>
            <td>
               <h4>@Html.RouteLink(@App_LocalResources.GlobalRes.НеОплачено, new { controller = "UserPaid", action = "Edit", area = "", @t.UserPaidId })</h4>
            </td>
          }
          @if (t.Payment == true)
          {
            <td>
                <h3> @Html.CheckBox("Payment", true)</h3>
            </td>
            <td>
                <h3>@App_LocalResources.GlobalRes.Оплачено</h3>
            </td>
          }
          <td>
              @Html.RouteLink(@App_LocalResources.GlobalRes.Удалить, new { controller = "UserPaid", action = "Delete", area = "", @t.UserPaidId })
          </td>
       </tr>
    }
</table>
@Html.RouteLink("Создать отчет по неоплаченым заказам?", new { controller = "UserPaid", action = "Report", area = "" })
