@model MvcInternetApplication.Models.RegisterModel
@{
    ViewBag.Title = @App_LocalResources.GlobalRes.Регистрация;
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2>@App_LocalResources.GlobalRes.СозданиеНовогоАккаунта</h2>
</hgroup>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <legend>@App_LocalResources.GlobalRes.ФормаДляРегистрации</legend>
        <ol>
            <li>
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName)
            </li>
            <li>
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password)
            </li>
            <li>
                @Html.LabelFor(m => m.ConfirmPassword)
                @Html.PasswordFor(m => m.ConfirmPassword)
            </li>
        </ol>
        <input type="submit" value="@App_LocalResources.GlobalRes.Регистрация" />
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
