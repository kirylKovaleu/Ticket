@model IEnumerable<MvcInternetApplication.Models.Performance>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.Name, "Details", new { id = item.Id })
        </td>
        <td>
            @Html.RouteLink((string)item.Date.ToShortDateString(), new { controller = "Seat", action = "Index", area = "", @item.Id })
        </td>
    </tr>
}

</table>
